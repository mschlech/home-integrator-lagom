{
  "apiVersion": "apps/v1beta1",
  "kind": "StatefulSet",
  "metadata": {
    "name": "home-integrator-service"
  },
  "spec": {
    "serviceName": "home-integrator-service",
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "app": "home-integrator-service"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "home-integrator-service",
            "image": "home-integrator-lagom/home-integrator-impl",
            "imagePullPolicy": "Never",
            "resources": {
              "requests": {
                "memory": "384Mi"
              }
            },
            "ports": [
              {
                "containerPort": 9000,
                "name": "http-lagom-api"
              },
              {
                "containerPort": 2551,
                "name": "akka-remote"
              }
            ],
            "env": [
              {
                "name": "APPLICATION_SECRET",
                "value": "home_secret_123"
              },
              {
                "name": "CASSANDRA_SERVICE_NAME",
                "value": "_native._tcp.cassandra.default.svc.cluster.local"
              },
              {
                "name": "HOME-INTEGRATOR-SERVICE_BIND_PORT",
                "value": "9000"
              },
              {
                "name": "HOME-INTEGRATOR-SERVICE_BIND_IP",
                "value": "0.0.0.0"
              },
              {
                "name": "AKKA_REMOTING_PORT",
                "value": "2551"
              },
              {
                "name": "AKKA_REMOTING_BIND_PORT",
                "value": "2551"
              },
              {
                "name": "AKKA_REMOTING_HOST",
                "value": "$HOSTNAME.home-integrator-service.default.svc.cluster.local"
              },
              {
                "name": "AKKA_REMOTING_BIND_HOST",
                "value": "$HOSTNAME.home-integrator-service.default.svc.cluster.local"
              },
              {
                "name": "AKKA_SEED_NODES",
                "value": "home-integrator-service-0.home-integrator-service.default.svc.cluster.local:2551,home-integrator-service-1.home-integrator-service.default.svc.cluster.local:2551,home-integrator-service-2.home-integrator-service.default.svc.cluster.local:2551"
              }
            ],
            "readinessProbe": {
              "httpGet": {
                "path": "/_status/circuit-breaker/current",
                "port": 9000
              },
              "initialDelaySeconds": 30,
              "periodSeconds": 30
            }
          }
        ]
      }
    }
  }
}